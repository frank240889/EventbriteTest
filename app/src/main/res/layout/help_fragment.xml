<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_rounded"
    android:padding="8dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title_help_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="@string/help"/>
    <TextView
        android:id="@+id/description_help_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:text="La descripción va aquí."
        tools:text="La descripción va aquí."/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_buttons_help_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ok_button_help_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white_overlay"
            android:theme="@style/RoundedButton.ColorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/accept"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>